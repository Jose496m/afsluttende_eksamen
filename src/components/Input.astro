---
const { label, placeholder } = Astro.props;
---

<div class="grid">
  <input type="text" class="border" placeholder={placeholder} />
</div>

<script></script>

<style>
  @media (min-width: 1025px) {
    .grid {
      position: relative;
      margin-left: 1200px;
      margin-top: 50px;
    }
    .border {
      border: 1px solid black;
      background-color: transparent;
      padding: 10px;
      text-align: center;
    }
  }

  @media (min-width: 600px) and (max-width: 1024px) {
    input {
      padding: 3%;
      text-align: center;
    }
  }
</style>
