    h5 {
      font-size: 34px;
      margin-left: 25%;
    }
    h3 {
      font-size: 1.5rem;
      margin: 20px 0;
    }
    .text {
      margin-left: 39%;
    }
    .Healing {
      margin-left: 32%;
    }
    .p {
      font-size: 25px;
      margin-left: 0%;
    }
    .full-width {
      width: 100%;
      margin: 0;
      padding: 0;
    }

    .hudtest3 {
      width: 100%;
      height: auto;
      display: block;
      margin: 0;
      padding: 0;
    }
  }

  @media (min-width: 1025px) {
    body {
      background-color: #f5f1eb;
    }
    .menu {
      display: block;
    }

    .menu1 {
      display: none;
    }

    .grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .hudtest {
      width: 60%;
      margin: 20px auto;
    }
    .line {
      border-bottom: 2px solid black;
      width: 37%;
      margin: 20px auto;
      position: absolute;
      margin-top: -41%;
      margin-left: 48%;
    }

    .hudtest2 {
      width: 50%;
      margin-left: -11%;
    }

    .knap {
      margin: 20px auto;
      margin-left: 70%;
    }

    h1 {
      font-size: 3rem;
      margin-top: 5%;
    }

    h3 {
