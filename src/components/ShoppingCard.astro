---
const { text, text2, text3 } = Astro.props;
---

<section class="container">
  <div class="farve">
    <slot />
    <h1>{text}</h1>
    <h4>{text2}</h4>
    <p>{text3}</p>
  </div>
</section>
<style>
  @font-face {
    font-family: fahkwangRegular;
    src: url("/fonts/Fahkwang-Regular.ttf");
  }
  @font-face {
    font-family: ZapfHumanist;
    src: url("/fonts/ZapfHumanist601Regular.ttf");
  }
  .container {
    display: flex;
    justify-content: center;
  }

  .farve {
    background-color: #e7dfd4;
    height: 525px;
    width: 400px;
    margin: 30px;
    padding: 20px;
    margin-top: 150px;
    margin-left: 0%;
  }
  h1 {
    text-align: center;
    margin-top: 10px;
    font-size: 20px;
  }
  h4 {
    text-align: center;
    margin-top: 10px;
    font-family: ZapfHumanist;
    font-size: 16px;
  }
  p {
    text-align: center;
    margin-top: 10px;
  }
  @media (max-width: 599px) {
    .container {
      display: flex;
      justify-content: center;
    }

    .farve {
      background-color: #e7dfd4;
      height: 525px;
      width: 100%;
      margin: 30px;
      padding: 20px;
      margin-top: 150px;
    }
    h2 {
      text-align: center;
      margin-top: 10px;
    }
    h3 {
      text-align: center;
      margin-top: 10px;
    }
    p {
      text-align: center;
      margin-top: 10px;
    }
  }
</style>
