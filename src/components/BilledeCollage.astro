---
import { Image } from "astro:assets";
import land1 from "../assets/images/land1.png";
import land2 from "../assets/images/land2.png";
import land3 from "../assets/images/land3.png";
import land4 from "../assets/images/land4.png";
---

<section class="flex">
  <div>
    <Image class="land" src={land1} alt="land1" />
  </div>
  <div>
    <Image class="land" src={land2} alt="land2" />
  </div>
  <div>
    <Image class="land hidden" src={land3} alt="land3" />
  </div>
  <div>
    <Image class="land hidden" src={land4} alt="land4" />
  </div>
</section>

<style>
  @media (min-width: 1025px) {
    .flex {
      display: flex;
    }
    .land {
      margin-top: 40px;
      width: 100%;
    }
  }
  @media (max-width: 999px) {
    .flex {
      display: flex;
    }
    .land {
      margin-top: 40px;
      width: 500px;
      height: auto;
    }
    .hidden {
      display: none;
    }
  }
</style>
