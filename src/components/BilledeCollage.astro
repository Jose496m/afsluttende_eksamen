---
import { Image } from "astro:assets";
import land1 from "../assets/images/land1.webp";
import land2 from "../assets/images/land2.webp";
import land3 from "../assets/images/land3.webp";
import land4 from "../assets/images/land4.webp";
---

<section class="flex">
  <div>
    <Image class="land" src={land1} alt="land1" />
  </div>
  <div>
    <Image class="land" src={land2} alt="land2" />
  </div>
  <div>
    <Image class="land hidden" src={land3} alt="land3" />
  </div>
  <div>
    <Image class="land hidden" src={land4} alt="land4" />
  </div>
</section>

<style>
  @media (min-width: 1025px) {
    .flex {
      display: flex;
    }
    .land {
      margin-top: 40px;
      width: 400px;
      height: 600px;
    }
  }

  @media (min-width: 600px) and (max-width: 1024px) {
    .flex {
      display: flex;
    }
    .land {
      margin-top: 40px;
      width: 280px;
      height: auto;
    }
    .hidden {
      display: none;
    }
  }

  @media (max-width: 599px) {
    .flex {
      display: flex;
    }
    .land {
      width: 23vh;
      height: auto;
    }
    .hidden {
      display: none;
    }
  }
</style>
