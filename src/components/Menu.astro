---
import { Image } from "astro:assets";
import logo from "../assets/images/logo.png";
import bag from "../assets/images/shoppingbag.png";
const { variant } = Astro.props;
---

<nav class={variant}>
  <ul>
    <li><a href="/"><Image class="logo" src={logo} alt="logo" /></a></li>
    <div class="liste">
      <li><a href="/about">ABOUT</a></li>
      <li><a href="/Hudanalyse/analyse">ANALYSE</a></li>
      <li><a href="/shop">SHOP</a></li>
    </div>
    <li>
      <a href="/flowkoebs"><Image class="bag" src={bag} alt="bag" /></a>
    </li>
  </ul>
</nav>

<style>
  @font-face {
    font-family: ZapfHumanist;
    src: url("/fonts/ZapfHumanist601Regular.ttf");
  }
  @media (min-width: 1025px) {
    nav {
      position: relative;
      margin-top: 2%;
    }
    ul {
      display: flex;
      align-items: center;
      justify-content: space-between;
      list-style: none;
    }
    li {
      font-family: ZapfHumanist;
    }

    .liste {
      display: flex;
      flex-direction: row;
      justify-content: end;
      align-items: center;
      margin-left: -10%;
    }
    a {
      text-decoration: none;
      color: black;
      margin-left: 194px;
    }
    .bag {
      width: 40px;
      height: auto;
      margin-left: -50%;
    }
    .logo {
      width: 60px;
      height: auto;
    }
  }
</style>
