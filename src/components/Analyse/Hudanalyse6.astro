    flex-direction: column;
    align-items: center;
  }

  .text-content {
    text-align: center;
    max-width: 700px;
    margin: 20px;
  }

  .line {
    border-bottom: 2px solid black;
    width: 80%;
    margin: 20px auto;
  }

  h2,
  h4,
  h5 {
    font-family: "SackersGothic", sans-serif;
  }

  h2 {
    font-size: 2rem;
    margin: 20px 0;
  }

  h3 {
    font-size: 1.5rem;
    margin: 20px 0;
  }

  h4 {
    font-size: 1rem;
    margin: 20px 0;
    font-family: PlayfairdisplayRegular;
  }

  p {
    font-size: 1rem;
    margin: 10px 0;
    line-height: 1.5;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .p {
    text-align: center;
  }

  @media (max-width: 599px) {
    .menu1 {
      display: block;
    }

    .hudtest4,
    .hudtest5,
    .hudtest6 {
      width: 40%;
    }

    a {
      text-decoration: none;
    }

    .knap {
      margin: 20px auto;
      margin-left: 10%;
    }
    .hudtest2 {
      width: 50%;
      margin-left: -6%;
      margin-top: -15%;
    }
    h2 {
      font-size: 2rem;
      margin-top: -53%;
    }
