    <a href="../beskrivelseshop"><ShopKnap /></a>
  </ShoppingCard>
  <ShoppingCard
    class="placering1 farve"
    text="I AM NOURISHED "
    text2="Body oil"
    text3="355 DKK"
  >
    <Image class="shop6" src={shop6} alt="shop6" />
