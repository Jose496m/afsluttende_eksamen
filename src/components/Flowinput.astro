---
const { label, placeholder } = Astro.props;
---

<div class="grid">
  <label>{label}</label>
  <input type="text" class="border" placeholder={placeholder} />
</div>

<style>
  @font-face {
    font-family: ZapfHumanist;
    src: url("/fonts/ZapfHumanist601Regular.ttf");
  }
  @media (min-width: 1025px) {
    input {
      font-family: ZapfHumanist;
      font-size: 20px;
    }
    .grid {
      margin-left: 50px;
      margin-top: 20px;
      margin-bottom: 20px;
    }
    .border {
      border: none;
      outline: none;
      border-bottom: 1px solid black;
      width: 60%;
      background-color: transparent;
    }
  }

  @media (min-width: 600px) and (max-width: 1024px) {
    input {
      font-family: ZapfHumanist;
      font-size: 16px;
    }
    .grid {
      margin-left: 130px;
      margin-top: 20px;
      margin-bottom: 20px;
    }
    .border {
      border: none;
      outline: none;
      border-bottom: 1px solid black;
      width: 60%;
      background-color: transparent;
    }
  }

  @media (max-width: 599px) {
    input {
      font-family: ZapfHumanist;
      font-size: 16px;
    }
    .grid {
      margin-left: 20px;
      margin-top: 20px;
      margin-bottom: 20px;
    }
    .border {
      border: none;
      outline: none;
      border-bottom: 1px solid black;
      width: 60%;
      background-color: transparent;
    }
  }
</style>
