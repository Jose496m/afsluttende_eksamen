---
import Flowinput from "../components/Flowinput.astro";
import Menu from "./Menu.astro";
import Menumobil from "./Menumobil.astro";
import { Image } from "astro:assets";
import logo from "../assets/images/logo.png";
import Produktknap from "./Produktknap.astro";
import flow from "../assets/images/koebsflow1.png";
import paypal from "../assets/images/paypal.png";
import mobilepay from "../assets/images/mobilepay.png";
import Klarna from "../assets/images/klarna.png";
---

<section class="header">
  <div class="menu1"><Menumobil /></div>
  <div>
    <a href="/"><Image class="logo" src={logo} alt="logo" /></a>
  </div>
</section>

<section>
  <div class="container">
    <div class="white-side">
      <div class="left">
        <h1>PAYMENT</h1>
        <Flowinput placeholder="Card number" />

        <div class="flex">
          <Flowinput placeholder="Exspire date" />
          <Flowinput placeholder="Security code" />
        </div>

        <Flowinput placeholder="Name on card" />
        <div class="label2">
          <label>
            <input type="checkbox" name="terms" value="terms" />
            Use shipping address as billing address
          </label>
        </div>
        <h2>OTHER PAYMENT METODE</h2>

        <div class="label other-payment">
          <label class="betaling">
            <input type="checkbox" name="paypal" value="paypal" />
            Paypal
          </label>
          <Image class="paypal" src={paypal} alt="paypal" />
        </div>
        <div class="line5"></div>
        <div class="label other-payment">
          <label class="betaling">
            <input type="checkbox" name="klarna" value="klarna" />
            Klarna
          </label>
          <Image class="klarna" src={Klarna} alt="klarna" />
        </div>
        <div class="line5"></div>
        <div class="label other-payment">
          <label class="betaling">
            <input type="checkbox" name="mobilepay" value="mobilepay" />
            MobilePay
          </label>
          <Image class="mobilepay" src={mobilepay} alt="mobilepay" />
        </div>
        <div class="line5"></div>
        <div class="label2">
          <label>
            <input type="checkbox" name="terms" value="terms" />
            Save my information for a faster check out
          </label>
        </div>

        <div class="knap">
          <a href="/flowkoebs4"><Produktknap text="CONTINUE TO SHIPPING" /></a>
        </div>
      </div>
    </div>
    <div class="black-side">
      <div class="line3"></div>
      <div class="flex2">
        <Image class="flow" src={flow} alt="flow" />
        <h4>I AM PURIFIED</h4>
        <div class="boks">
          <p class="boks1">1</p>
        </div>
      </div>
      <div class="flex3">
        <p class="p2">Remove</p>
        <p class="p3">225.00 DKK</p>
      </div>
      <div class="line4"></div>
      <div class="grid_1-1">
        <p class="p4">Subtotal</p>
        <p class="p4">225.00 DKK</p>
        <p class="p4">Shipping</p>
        <p class="p4">35.00 DKK</p>
        <p class="p4">Included taxes</p>
        <p class="p4">00.00 DKK</p>
        <p class="p4">Total</p>
        <p class="p4">260.00 DKK</p>
      </div>
    </div>
  </div>
</section>
