---
import Menu from "../Menu.astro";
import Menumobil from "../Menumobil.astro";
import HudAnalyseKnap from "./HudAnalyseKnap.astro";
---

<section>
  <div class="menu1"><Menumobil /></div>
  <div class="menu"><Menu /></div>
  <div>
    <h1>How often does your skin decide to throw an acne party?</h1>
    <p class="tekst">
      It's essential for us to grasp how often your skin throws these little
      acne soirées, so we can craft the most effective remedies to address your
      particular complexion conundrum. Select the description that best mirrors
      your experience.
    </p>
  </div>
</section>
<section>
  <div class="text">
    <div>
      <p class="boks"><input type="checkbox" /> Daily</p>
    </div>
    <div>
      <p class="boks"><input type="checkbox" /> Weekly</p>
    </div>
    <div>
      <p class="boks"><input type="checkbox" /> Monthly</p>
    </div>
    <div>
      <p class="boks boks2"><input type="checkbox" /> Rarely</p>
    </div>
  </div>
</section>
<section class="flex">
  <div class="button2">
    <a href="/Hudanalyse/analyse3"> <HudAnalyseKnap title="BACK" /></a>
  </div>
  <div class="button2">
    <a href="/Hudanalyse/analyse5"> <HudAnalyseKnap title="NEXT" /></a>
  </div>
</section>

<style>
  @media (min-width: 1025px) {
    body {
      background-image: url(../../assets/images/hudanalyse1.png);
    }
    .menu {
      position: absolute;
      margin-left: 30px;
      margin-top: -100px;
    }
    .menu1 {
      display: none;
    }
    h1 {
      text-align: center;
      margin-top: 150px;
    }
    .tekst {
      width: 450px;
      text-align: center;
      margin-left: 550px;
      margin-top: 20px;
    }

    .text {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      margin-top: -70px;
    }

    .boks input[type="checkbox"] {
      /* Skjul den standard checkboks */
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      /* Opret en brugerdefineret checkboks */
      width: 16px;
      height: 16px;
      position: relative;
      border: 1px solid black;
      border-radius: 20px; /* Gør kanterne lidt afrundede */
      margin-right: 10px; /* Tilføj lidt plads mellem checkboksen og teksten */
    }

    /* Opret checkhakket inden i den brugerdefinerede checkboks */
    .boks input[type="checkbox"]::before {
      content: "\2713"; /* Brug unicode-tegnet for check-hakket */
      font-size: 12px; /* Juster størrelsen efter behov */
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: black; /* Farve på checkhakket */
      opacity: 0; /* Start med at være usynlig */
    }

    /* Stil den brugerdefinerede checkboks, når den er markeret */
    .boks input[type="checkbox"]:checked::before {
      opacity: 1; /* Gør checkhakket synligt */
    }

    .boks {
      border: 1px solid black;
      background-color: transparent;
      padding: 50px;
      margin: 120px;
      text-align: center;
    }
    .boks2 {
      margin-top: -50px;
    }
    .flex {
      display: flex;
    }

    a {
      text-decoration: none;
      cursor: pointer;
      color: black;
    }
    .button2 {
      border: 1px solid black;
      width: 200px;
      height: 35px;
      margin-left: 400px;
      text-align: center;
      color: black;
      padding: 10px;
      margin-top: 20px;
    }
  }
  @media (max-width: 599px) {
    body {
      background-image: url(../../assets/images/hudanalyse1.png);
    }

    .menu {
      display: none;
    }
    h1 {
      text-align: center;
      margin-top: 150px;
    }
    .tekst {
      width: 306px;
      text-align: center;
      margin-left: 53px;
      margin-top: 20px;
    }

    .boks input[type="checkbox"] {
      /* Skjul den standard checkboks */
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      /* Opret en brugerdefineret checkboks */
      width: 16px;
      height: 16px;

      border: 1px solid black;
      border-radius: 20px; /* Gør kanterne lidt afrundede */
      margin-right: 10px; /* Tilføj lidt plads mellem checkboksen og teksten */
    }

    /* Opret checkhakket inden i den brugerdefinerede checkboks */
    .boks input[type="checkbox"]::before {
      content: "\2713"; /* Brug unicode-tegnet for check-hakket */
      font-size: 12px; /* Juster størrelsen efter behov */

      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: black; /* Farve på checkhakket */
      opacity: 0; /* Start med at være usynlig */
    }

    /* Stil den brugerdefinerede checkboks, når den er markeret */
    .boks input[type="checkbox"]:checked::before {
      opacity: 1; /* Gør checkhakket synligt */
    }

    .boks {
      border: 1px solid black;
      background-color: transparent;
      padding: 50px;
      margin: 55px;
      text-align: center;
    }

    .button {
      border: 1px solid black;
      width: 200px;
      height: 35px;
      text-align: center;
      color: black;
      padding: 10px;
      margin-bottom: 70px;
      margin-top: -30px;
      margin-left: 120px;
    }
    .button2 {
      border: 1px solid black;
      width: 200px;
      height: 35px;
      text-align: center;
      color: black;
      padding: 10px;
      margin-bottom: 70px;
      margin-top: -30px;
      margin-left: 120px;
    }
    a {
      text-decoration: none;
      cursor: pointer;
      color: black;
    }
  }
</style>
