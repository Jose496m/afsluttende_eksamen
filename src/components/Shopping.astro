<section>
  <h3 class="h4">
    Wondering which product will make your skin fall head over heels?
  </h3>
  <p class="p">Our quick quiz will set you up with your ideal skincare match</p>
  <Image class="shop10" src={shop10} alt="shop10" />
</section>

<style>
  @font-face {
    font-family: ZapfHumanist;
    src: url("/fonts/ZapfHumanist601Regular.ttf");
  }
  @font-face {
    font-family: PlayfairdisplayRegular;
    src: url("/fonts/PlayfairDisplay-Regular.ttf");
  }
  @font-face {
    font-family: fahkwangRegular;
    src: url("/fonts/Fahkwang-Regular.ttf");
  }
  @media (min-width: 1025px) {
    body {
      background-color: #f5f1eb;
    }
    .menu1 {
      display: none;
    }
    .menu {
      margin-left: 30px;
      margin-top: 50px;
    }
    h5 {
      font-family: PlayfairdisplayRegular;
      width: 500px;
      font-size: 30px;
      margin-left: 50px;
      position: absolute;
      margin-top: 150px;
    }
    .min-sektion {
      background-color: #161616; /* Tilpas farven efter behov */
      padding: 20px; /* Tilføj eventuelt ekstra padding for at give plads omkring indholdet */
      margin-top: 50px;
    }
    ul {
      display: flex;
      align-items: center;
      justify-content: space-between;
      list-style: none;
      color: white;
      font-family: ZapfHumanist;
      font-size: 20px;
    }

    h1 {
      margin-top: 100px;
      margin-left: 50px;
      font-size: 36px;
    }
    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }
    p {
      width: 529px;
      margin-left: 50px;
      margin-top: 365px;
      font-size: 20px;
    }
    a {
      text-decoration: none;
      color: black;
    }
    .shop1,
    .shop2,
    .shop3,
    .shop4,
    .shop5,
    .shop6,
    .shop7,
    .shop8,
    .shop9 {
      width: 200px;
      margin-left: 80px;
      margin-top: 20px;
    }
    .shop2 {
      margin-top: 50px;
      width: 260px;

      margin-left: 45px;
    }
    .shop1 {
      width: 260px;
      margin-left: 45px;
    }
    .p,
    .h4 {
      position: absolute;
      color: white;
      margin-left: 1000px;
    }
    .h4 {
      margin-top: 500px;
      width: 550px;
      font-size: 25px;
    }
    .p {
      margin-top: 580px;
      font-size: 20px;
    }
    .shop10 {
      margin-top: 50px;
    }
  }

  /*------- Mobil ------*/
  @media (max-width: 800px) {
    body {
      background-color: #f5f1eb;
    }
    .header {
      flex-direction: column;
      align-items: flex-start;
    }

    .menu1 {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
    }

    .menu {
      display: none;
    }

    h1.product {
      margin-top: 12rem;
      margin-left: 1rem;
      font-size: 1.5rem;
    }

    .min-sektion {
      background-color: #161616;
      color: white;
      padding: 1rem;
      margin-top: 3rem;
      width: 100%;
    }

    ul {
      display: flex;
      justify-content: space-between;
      padding: 0;
      font-family: ZapfHumanist;
    }

    ul li {
      list-style: none;
      padding: 0.5rem 0;
      text-align: center;
    }

    h5 {
      font-family: PlayfairdisplayRegular;
      width: 100%;
      font-size: 1.4rem;
      margin-left: 1rem;
      margin-top: 3rem;
    }

    p {
      margin-left: 1rem;
      margin-right: 5rem;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0rem;
      margin-top: 2rem;
    }

    .intro-text {
      width: 100%;
      margin-left: 1rem;
      margin-top: 1rem;
      font-size: 1rem;
    }

    .shop1,
    .shop2 {
      width: 80%;
      margin-top: 5rem;
      margin-left: 40px;
    }

    .shop3,
    .shop4,
    .shop5,
    .shop6,
    .shop7,
    .shop8,
    .shop9 {
      width: 80%;
      height: 340px;
      margin-left: 40px;
    }

    .h4,
    .p {
      color: white;
      margin-left: 50px;
      width: 80%;
      text-align: center;
    }

    .h4 {
      position: absolute;
      margin-top: 6rem;
      font-size: 1.5rem;
    }

    .p {
      margin-top: 18rem;
      font-size: 1.2rem;
      position: absolute;
    }

    .shop10 {
      width: 100%;
      height: 400px;
      margin-top: 1rem;
    }
  }
</style>
