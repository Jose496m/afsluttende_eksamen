---
import { Image } from "astro:assets";
import Menu from "./Menu.astro";
import højre from "../assets/images/landing2.png";
import venstre from "../assets/images/landing1.png";
import forside from "../assets/images/forside1.png";
import pro1 from "../assets/images/produkt1.png";
import pro2 from "../assets/images/produkt2.png";
import pro3 from "../assets/images/produkt3.png";
import landing1 from "../assets/images/landingpage1.png";
import Menumobil from "./Menumobil.astro";
import Produktknap from "./Produktknap.astro";
---

<section class="header">
  <div class="menu1"><Menumobil /></div>
  <div class="menu"><Menu /></div>
  <h1>I AM BEAUTIFUL</h1>
  <div class="flex">
    <div></div>
    <div>
      <Image class="pic" src={venstre} alt="venstre" />
    </div>
    <div>
      <h3>OUR GLOWGETTER:</h3>
      <p>SHIELDING SHINE FOR SUNNY DAYS!</p>
      <Image class="pic3" src={landing1} alt="landing1" />
      <p class="hero">
        Our luxuriously face oil soothes and deeply moisturizing, it swiftly
        penetrates the skin, making it your go-to for summer radiance.
      </p>
      <div class="knap">
        <a href="/shop"><Produktknap text="DISCOVER PRODUCT" /></a>
      </div>
    </div>
  </div>
</section>
<section class="citat">
  <div>
    <h4>
      "I AM" cultivates awareness and empowers out consumers to take an active <br
      />
      role in their journey, embracing their inner energy and guidance to become
      <br />
      self-experts"
    </h4>
  </div>
</section>
<section class="bestseller">
  <div class="bestseller1">
    <h2 class="best">BEST SELLER</h2>
    <h3 class="bestseller3">I AM PURIFIED Cleansing Oil</h3>
    <p class="bestseller2">Some of the love-infused benefits:</p>
    <p class="bestseller2">
      Radiance-Boosting Raspberry Seed Oil: Enriched with potent antioxidants,
      this elixir strengthens your skin's defenses against daily stressors,
      ensuring a flawless, luminous complexion.
    </p>
    <p class="bestseller2">
      Balancing Squalene Formula: Experience the magic of balanced hydration as
      this lightweight elixir harmonizes your skin's natural oils, leaving it
      resilient, supple, and deeply nourished.
    </p>
    <p class="bestseller2">
      Luxurious Pequi Oil Blend: Indulge in the ultimate skin treat! Our blend
      of pequi oil, rich in essential fatty acids and vitamins, deeply nourishes
      your skin, unveiling a captivating glow and lasting vitality.
    </p>
    <div class="knap2">
      <a href="/shop"><Produktknap text="ADD TO CARD" /></a>
    </div>
  </div>
  <div>
    <Image class="pic1" src={forside} alt="højre" />
  </div>
</section>
<section>
  <h2 class="produkter">OTHER PRODUCTS</h2>
  <div class="produkt">
    <div>
      <Image class="pic2" src={pro3} alt="pro1" />
      <p class="tekst">I AM HEALING <br /> FACE OIL <br /> 415 kr</p>
    </div>
    <div>
      <Image class="pic2" src={pro1} alt="pro1" />
      <p class="tekst">
        I AM PURIFIED <br />
        FACE WASH <br />
        225 kr
      </p>
    </div>
    <div>
      <Image class="pic2" src={pro2} alt="pro1" />
      <p class="tekst">
        I AM NOURISHED <br />
        BODY OIL <br />
        355 kr
      </p>
    </div>
  </div>
</section>
<style>
  body {
    margin: 0;

    background-color: #f5f1eb;
  }
  @font-face {
    font-family: fahkwangRegular;
    src: url("/fonts/Fahkwang-Regular.ttf");
  }
  @font-face {
    font-family: PlayfairdisplayBold;
    src: url("/fonts/PlayfairDisplay-Bold.ttf");
  }
  @font-face {
    font-family: PlayfairdisplayRegular;
    src: url("/fonts/PlayfairDisplay-Regular.ttf");
  }
  @font-face {
    font-family: ZapfHumanist;
    src: url("/fonts/ZapfHumanist601Regular.ttf");
  }
  @font-face {
    font-family: fahkwangMedium;
    src: url("/fonts/Fahkwang-Medium.ttf");
  }

  a {
    text-decoration: none;
    color: black;
  }
  h1 {
    font-family: fahkwangRegular;
    font-size: 4vw;
    margin: 20px 0;
  }

  .pic {
    height: auto;
  }

  .pic3 {
    width: 20vh;
    height: auto;
  }

  h3 {
    font-family: PlayfairdisplayBold;
    font-size: 3vw;
    margin: 10px 0;
    margin-top: 30vh;
  }

  p {
    font-family: PlayfairdisplayRegular;
    font-size: 1.5vw;
    margin: 10px 0;
  }

  .hero {
    font-family: ZapfHumanist;
    font-size: 1.5vw;
    margin: 10px 0;
    text-align: center;
  }

  .knap,
  .knap2 {
    margin: 20px 0;
    margin-left: 15vh;
  }

  .knap2 {
    margin-left: 13vh;
  }

  .bestseller {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;

    color: white;
  }

  .bestseller1 {
    text-align: center;
    background-color: #46433b;
  }

  .best,
  .bestseller3 {
    font-family: fahkwangMedium;
    margin: 10px 0;
  }

  .best {
    font-size: 2.5vw;
  }

  .bestseller3 {
    font-size: 2vw;
  }

  .bestseller2 {
    font-family: ZapfHumanist;
    font-size: 20px;
    margin: 10px 0;
  }

  .pic1 {
    width: 84vh;
    height: 81vh;
    margin-top: 2vh;
  }

  .produkter {
    text-align: center;
    font-family: fahkwangMedium;
    font-size: 2.5vw;
    margin: 20px 0;
  }

  .produkt {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }

  .pic2 {
    max-width: 100%;
    height: auto;
  }

  .tekst {
    text-align: center;
    font-family: ZapfHumanist;
    font-size: 1.5vw;
  }

  @media (min-width: 1025px) {
    .menu1 {
      display: none;
    }
    .menu {
      position: absolute;
      top: 40px;
      left: 60px;
    }
    .citat h4 {
      text-align: center;
      font-family: PlayfairdisplayRegular;
      font-size: 2vw;
    }
    .flex {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .flex > div {
      margin: 10px;
    }

    h1 {
      position: absolute;
      top: 150px;
      left: 440px;
      font-size: 76px;
    }
    .flex {
      flex-direction: row;
      justify-content: center;
      align-items: center;
      margin-left: -191px;
    }
    .pic {
      height: auto;
      margin-top: -36vh;
    }
    .pic3 {
    }
    .hero {
      width: 534px;
    }
    h4 {
      padding: 100px;
      font-size: 26px;
    }
    .bestseller {
      flex-direction: row;
    }
    .bestseller1 {
      padding: 50px;
      width: 300vh;
      height: 80vh;
      margin-left: -3vh;
    }
    .best {
      margin-top: 50px;
      margin-left: -23vh;
    }
    .bestseller2 {
      width: 630px;
      text-align: left;
      margin-left: 13vh;
    }
    .bestseller3 {
      margin-left: -4vh;
    }
    .produkt {
      gap: 160px;
      align-items: center;
      margin: 30px;
    }
    .tekst {
      margin: 10px 0;
    }
  }

  @media (min-width: 600px) and (max-width: 1024px) {
    .menu1 {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
    }
    .menu {
      display: none;
    }
    h1 {
      margin: 20px 0;
    }
    .flex {
      flex-direction: row;
      justify-content: center;
    }
    .pic {
      width: 50%;
      height: auto;
    }
    h3 {
      margin: 20px 0;
    }
    .pic3 {
      width: 50%;
    }
    .hero {
      width: 50%;
      margin: 0 auto;
    }
    h4 {
      padding: 100px;
    }
    .bestseller {
      flex-direction: row;
    }
    .bestseller1 {
      padding: 50px;
    }
    .best {
      margin-left: 150px;
    }
    .bestseller2 {
      width: 510px;
      margin-left: 150px;
    }
    .bestseller3 {
      margin-left: 152px;
    }
    .produkt {
      gap: 50px;
      align-items: center;
      margin: 30px;
    }
    .tekst {
      margin: 10px 0;
    }
  }

  @media (max-width: 599px) {
    .menu1 {
      position: absolute;
      top: 0;
      left: 0;
      width: 180vh;
    }
    .menu {
      display: none;
    }
    h1 {
      margin: 20px 0;
      font-size: 25vw; /* Juster skriftstørrelsen for at passe til små skærme */
      white-space: nowrap; /* Forhindrer tekstbrud */
      overflow: hidden; /* Skjuler eventuel overløbende tekst */
      text-align: center; /* Centrerer teksten */
      position: absolute;
      margin-top: 20vh;
      margin-left: 50vh;
    }

    .pic {
      width: 115vh;
      height: 160vh;
    }
    h3 {
      margin-top: 41vh;
      font-size: 8vh;
      margin-left: 5vh;
    }
    .pic3 {
      width: 30vh;
      margin-left: 20vh;
    }
    .hero {
      width: 55vh;
      margin: 0 auto;
      font-size: 10.5vw;
      text-align: left;
      margin-left: 10vh;
    }
    h4 {
      padding: 20px;
      font-size: 5vw;
    }
    .bestseller {
      flex-direction: column;
    }
    .bestseller1 {
      text-align: center;
      background-color: #46433b;
      width: 326vh;
      padding: 300px;
    }
    .best {
      margin: 20px 0;
      font-size: 17vw;
      margin-left: 600px;
    }
    .bestseller2 {
      width: 1000px;
      margin: 10px 0;
      font-size: 10vw;
      text-align: left;
      margin-left: 1246px;
    }
    .bestseller3 {
      margin: 20px 0;
      font-size: 15vw;
      margin-left: 1020px;
    }
    .produkt {
      flex-direction: column;
      gap: 20px;
    }
    .tekst {
      margin: 10px 0;
      font-size: 4vw;
    }
    .flex {
      display: flex;
    }
    p {
      font-family: PlayfairdisplayRegular;
      font-size: 10.5vw;
      margin: 10px 0;
      margin-left: 6vh;
    }
    .citat h4 {
      text-align: center;
      font-family: PlayfairdisplayRegular;
      font-size: 16vw;
      width: 1500px;
      margin-left: 12vh;
      margin-top: 20vh;
    }
    .pic1 {
      width: 184vh;
      height: 140vh;
      margin-left: 1320px;
    }
  }
</style>
