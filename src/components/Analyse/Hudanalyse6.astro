    margin: 10px 0;
  }

  .hudtest,
  .hudtest2,
  .hudtest3,
  .hudtest4,
  .hudtest5,
  .hudtest6 {
    width: 100%;
    height: auto;
    display: block;
    margin: 20px auto;
  }

  .knap {
    text-align: center;
    margin: 20px 0;
  }

  .content-section {
    padding: 20px;
    margin: 20px 0;
  }

  .flex {
