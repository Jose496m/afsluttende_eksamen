---
import { Image } from "astro:assets";
import shop7 from "../assets/images/shop7.png";
import Menu from "./Menu.astro";
import Menumobil from "./Menumobil.astro";
import skrald from "../assets/images/skrald.png";
import Input from "./Input.astro";
import Produktknap from "./Produktknap.astro";
---

<section class="header">
  <div class="menu1"><Menumobil /></div>
  <div class="menu"><Menu /></div>
</section>

<section>
  <h1>YOUR BAG</h1>
</section>
<section>
  <nav>
    <ul>
      <li>Product</li>
      <li>Quantity</li>
      <li>Total</li>
    </ul>
  </nav>
  <div class="line"></div>
</section>
<section>
  <div class="flex">
    <div>
      <Image class="shop7" src={shop7} alt="shop7" />
    </div>

    <div>
      <h3>I AM PURIFIED</h3>
      <p class="p1">225 DKK</p>
      <p class="p1">50ml</p>
    </div>
    <div class="boks">
      <p class="boks1">- 1 +</p>
    </div>
    <Image class="skrald" src={skrald} alt="skrald" />
    <p class="pris">225 DKK</p>
  </div>
  <div class="line"></div>
</section>
<section>
  <div class="border spacing">
    <Input placeholder="PROMO CODE" />
  </div>
  <div class="subtotal">
    <div class="flex1">
      <p>Subtotal</p>
      <p class="pris2">225 DKK</p>
    </div>
    <div>
      <p class="p2">Levering og rabatter beregnes ved betaling</p>
    </div>
    <div class="knap">
      <a href="/flowkoebs2"><Produktknap text="PROCED TO CHECK OUT" /></a>
    </div>
  </div>
</section>

